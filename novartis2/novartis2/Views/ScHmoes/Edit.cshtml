@model MSContext.ScHmo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>ScHmo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HmoId" />
            <div class="form-group">
                <label asp-for="HmoName" class="control-label"></label>
                <input asp-for="HmoName" class="form-control" />
                <span asp-validation-for="HmoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateModified" class="control-label"></label>
                <input asp-for="DateModified" class="form-control" />
                <span asp-validation-for="DateModified" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CreatorAccountId" class="control-label"></label>
                <select asp-for="CreatorAccountId" class="form-control" asp-items="ViewBag.CreatorAccountId"></select>
                <span asp-validation-for="CreatorAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModifierAccountId" class="control-label"></label>
                <select asp-for="ModifierAccountId" class="form-control" asp-items="ViewBag.ModifierAccountId"></select>
                <span asp-validation-for="ModifierAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
