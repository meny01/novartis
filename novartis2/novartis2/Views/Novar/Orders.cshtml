@model novartis2.Models.modelViews.OrderModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.9.3/css/bootstrap-select.min.css">
    </environment>


</head>
<body>
 

    <img src="~/images/NovarImage.png">
    <div class="container-fluid" style="width:1000px;" id="contain1" dir="rtl">
        <div class="navbar-collapse">
            <ul class="nav  navbar-nav" style="border:1px solid #cecece; float:right;">
                <li><a asp-area="" asp-controller="Novar" asp-action="Reports">דוחות</a></li>
                <li><a asp-area="" asp-controller="Novar" asp-action="Orders">המלצות</a></li>
            </ul>

            <div id="contain2" dir="rtl">
                <div id="tab1" class="tab-content" style="border:1px solid #cecece;">
                    <div class="nav-tabs" style="margin-top:70px;">
                        <div style="display: inline;">
                            <div style="float: right; display: block!important;">
                                <label ID="LblAgentName" Style="float: right; direction: rtl;">שם הסוכן:</label>
                                <label ID="LblName" Style="float: right;" Font-Size="Larger"></label>
                                <label ID="LblCurrentDate" Style="float: right; margin-right: 20px; direction: rtl;">תאריך:</label>
                                <label ID="LblDate" Style="float: right;"></label>
                            </div>
                            <br />
                            <div style="margin-top: 30px; ">
                                <div style="float: right;">
                                    <label id="HmoLabel" style="float:right;">קופת חולים:</label>
                                    <select id="CmbHmo" class="form-control" style="direction:rtl; width:200px;" onchange="getData()">
                                        <option>בחר קופת חולים</option>
                                        @foreach (var item in Model.hmo)
                                        {
                                            <option value="@item.HmoId">@item.HmoName</option>
                                        }
                                    </select>
                                </div>
                                <br />
                                <br />

                                <br />
                                <div style="float: right;">
                                    <label id="ASPxLabel1" style="float:right;">בית מרקחת:</label>
                                    <select id="CmbPharm" class="form-control" style="direction:rtl; width:600px;" onchange="getData2()"></select>
                                </div>
                            </div>
                        </div>


                        <div style="margin-top: 20px;">
                            <table id="GrdNewOrder" class="table-bordered" width="900" style="margin-right:20px;">
                                <thead style="background-color:aliceblue; text-align:right;">
                                    <tr>
                                        <th>קוד</th>
                                        <th>מותג</th>
                                        <th>מוצר</th>
                                        <th>כמות בקרטון</th>
                                        <th>כמות מומלצת</th>
                                    </tr>
                                </thead>

                            </table>



                            <br />
                            <table id="GrdNewOrderB" class="table-bordered" style="direction:rtl; width:900px">
                                <thead>
                                    <tr></tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function getData() {
            var cmbhmo = $('#CmbHmo').val();
            $.ajax({
                type: "Post",
                url: "/Novar/GetItem",
                data: { 'cmbhmo': cmbhmo },
                dataType: 'json',
                success: function (data) {
                    $('#CmbPharm').empty();
                    $('#CmbPharm').append('<option> בחר בית מרקחת </option > ');
                    for (var i = 0; i < data.length; i++) {
                        $('#CmbPharm').append('<option value=' + data[i].value + '>' + data[i].text + '</option > ');
                    }
                }
            });
        }
    </script>
    <script type="text/javascript">
        function getData2() {
            var pharmId = $('#CmbPharm').val();
            $.ajax({
                type: "Post",
                url: "/Novar/GetItemGrdA",
                data: { 'pharmId': pharmId },
                dataType: 'json',
                success: function (json) {
                  //  $('#GrdNewOrder').empty();
                    $('#GrdNewOrder').append("<tbody> ")

                    for (var i = 0; i < json.length; i++) {
                      //  if(@Model.clalit == 1)
                        $('#GrdNewOrder').append(" <tr> ")
                            $('#GrdNewOrder').append("<td>" + json[i].clalitCode + "</td>");
                      //  else $('#GrdNewOrder').append("<td>" + json[i].yarpaCode + "</td>");
                        $('#GrdNewOrder').append("<td>" + json[i].productName.split(" ")[0] + "</td>");
                        $('#GrdNewOrder').append("<td>" + json[i].productName + "</td>");
                        $('#GrdNewOrder').append("<td>" + json[i].quantity + "</td>");
                        $('#GrdNewOrder').append("</tr> ")
                    }
                    $('#GrdNewOrder').append("  </tbody> ")
                }
                });
        }
    </script>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

</body>
</html>

