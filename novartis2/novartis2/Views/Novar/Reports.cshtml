
@model novartis2.Models.modelViews.reportsModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Reports</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/boostrap-datetimepicker/css/bootstrap-datepicker.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.9.3/css/bootstrap-select.min.css">
    </environment>


</head>
<body>


    <img src="~/images/NovarImage.png">
    <div class="container-fluid" style="width:1000px; border:1px solid #cecece;" id="contain1" dir="rtl">
        <div class="navbar-collapse">
            <ul class="nav  navbar-nav" style="border:1px solid #cecece; float:right;">
                <li><a asp-area="" asp-controller="Novar" asp-action="Reports">דוחות</a></li>
                <li><a asp-area="" asp-controller="Novar" asp-action="Orders">המלצות</a></li>
            </ul>

            <div id="contain2" dir="rtl">
                <div id="tab1" class="tab-content">
                    <div style="display: inline;">

                        <br />
                        <div style="margin-top: 40px; ">
                            <div style="float: right;">
                                <select ID="CmbReport" class="form-control" style="direction:rtl; width:200px;" onchange="getData()">
                                    <option>בחר דוח</option>
                                    @foreach (var item in Model.listItemsReports)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>

                            <div style="float: right; margin-right:20px;">
                                <select ID="CmbPeriod" class="form-control" style="direction:rtl; width:200px;" onchange="getData2()">
                                    <option>בחר תקופת זמן</option>
                                    @foreach (var item in Model.listItemsPeriod)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                            <div style="float: right; margin-right:20px;">
                                <input type="date" value="מתאריך" class="datepicker" id="timePickers" style="display: none; direction:rtl;" />
                            </div>
                            <div style="float: right; margin-right:20px;">
                                <input type="date" value="עד תאריך" class="datepicker" id="timePickers2" style="display: none;direction:rtl;" />
                            </div>
                            <div style="float: right; margin-right:20px;">
                                <input type="date" class="datepicker" value="בחר חודש" id="timePickers3" style="display: none;direction:rtl" />
                            </div>
                            <div style="float: right; margin-right:20px;">
                                <select id="cmbYears" class="form-control" style="direction:rtl; width:150px; display:none;">
                                    <option>בחר שנה</option>
                                    <option value="2015">2015</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>
                                    <option value="2018">2018</option>
                                </select>
                            </div>
                            <div style="float: right; margin-right:20px;">
                                <select id="cmbQuarter" class="form-control" style="direction:rtl; width:150px;display:none">
                                    <option>בחר רבעון</option>
                                    <option value="r1">רבעון ראשון</option>
                                    <option value="r2">רבעון שני</option>
                                    <option value="r3">רבעון שלישי</option>
                                    <option value="r4">רבעון רביעי</option>
                                </select>
                            </div>
                            <div style="float: left; margin-right:20px;">
                                <button id="createReportBtn" style="display:none; direction:rtl" onclick="getData3">צור דוח</button>
                            </div>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function getData() {
            var CmbReport = $('#CmbReport').val();
            $.ajax({
                type: "Post",
                url: "/Novar/UpdateReportCmb",
                data: { 'CmbReport': CmbReport },
            });
        }
    </script>
    <script type="text/javascript">
        function getData2() {
            $('#timePickers').hide()
            $('#timePickers2').hide()
            $('#timePickers3').hide()
            $('#cmbYears').hide()
            $('#cmbQuarter').hide()
            $('#createReportBtn').hide()
            var CmbPeriod = $('#CmbPeriod').val();

            $.ajax({
                type: "Post",
                url: "/Novar/UpdatePeriodCmb",
                data: { 'CmbPeriod': CmbPeriod },
                dataType: 'json',
                success: function (json) {
                    if (json == 1) {
                        $('#timePickers').datepicker({
                            changeMonth: true,
                            changeYear: true,
                            format: "dd/mm/yyyy",
                            language: "heb"
                        });
                        $('#timePickers2').datepicker({
                            changeMonth: true,
                            changeYear: true,
                            format: "dd/mm/yyyy",
                            language: "heb"
                        });
                        $('#timePickers').show()
                        $('#timePickers2').show()
                    }
                    else if (json == 2) {
                        $('#timePickers3').datepicker({
                            format: "mm-yyyy",
                            viewMode: "months",
                            minViewMode: "months"
                        });
                        $('#timePickers3').show()
                    }
                    else if (json == 3) {
                        $('#cmbYears').show()
                        $('#cmbQuarter').show()
                    }
                    $('#createReportBtn').show()
                }
            });
        }
    </script>

